  },
  "homepage": "https://github.com/tjsingleton/bulletbuzz#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "playwright": "^1.54.1"
