{
  "name": "bulletbuzz",
  "version": "1.0.0",
  "description": "A browser-based bullet heaven game with sophisticated AI and headless simulation capabilities for balance testing.",
  "main": "dist/BulletBuzzGame.js",
  "scripts": {
    "build": "tsc",
    "dev": "live-server --port=8080 --open=/index.html",
    "dev:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "screenshots": "node screenshot-test.js",
    "screenshots:advanced": "node advanced-screenshots.js",
    "screenshots:clean": "node scripts/screenshots.js clean",
    "screenshots:ui": "node scripts/screenshots.js ui",
    "screenshots:speed": "node scripts/screenshots.js speed",
    "screenshots:game-states": "node scripts/screenshots.js game-states",
    "screenshots:game-over": "node scripts/screenshots.js game-over",
    "screenshots:all": "node scripts/screenshots.js all",
    "screenshots:help": "node scripts/screenshots.js",
    "docs:dev": "cd docs && npm start",
    "docs:build": "cd docs && npm run build",
    "docs:deploy": "cd docs && npm run deploy",
    "docs:generate": "typedoc --out docs/api src/**/*.ts",
    "docs:generate:watch": "typedoc --out docs/api src/**/*.ts --watch",
    "docs:generate:json": "typedoc --out docs/api src/**/*.ts --json docs/api/docs.json",
    "test:github-pages": "node advanced-screenshots.js github-pages",
    "test:documentation": "node advanced-screenshots.js documentation",
    "test:game-content": "node advanced-screenshots.js game-content",
    "test:readme-docs": "node advanced-screenshots.js readme-docs",
    "test:game-doc-link": "node advanced-screenshots.js game-doc-link",
    "test:docs-logo-size": "node advanced-screenshots.js docs-logo-size",
    "test:mermaid-diagram": "node advanced-screenshots.js mermaid-diagram",
    "test:mobile-controls": "node advanced-screenshots.js mobile-controls",
  "test:comprehensive": "node advanced-screenshots.js comprehensive",
  "test:comprehensive:local": "node advanced-screenshots.js comprehensive http://localhost:8080/game/",
  "test:comprehensive:game": "node advanced-screenshots.js comprehensive https://tjsingleton.github.io/bulletbuzz/game/",
  "test:comprehensive:docs": "node advanced-screenshots.js comprehensive https://tjsingleton.github.io/bulletbuzz/",
  "test:comprehensive:all": "npm run test:comprehensive:local && npm run test:comprehensive:game && npm run test:comprehensive:docs",
    "deploy": "./scripts/deploy.sh",
    "deploy:quick": "./scripts/quick-deploy.sh",
    "test:all": "./scripts/test-deployment.sh",
    "logo:update": "./scripts/update-logo.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjsingleton/bulletbuzz.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tjsingleton/bulletbuzz/issues"
  },
  "homepage": "https://github.com/tjsingleton/bulletbuzz#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "ts-jest": "^29.4.0",
    "typedoc": "^0.28.8",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "playwright": "^1.54.1"
  }
}
